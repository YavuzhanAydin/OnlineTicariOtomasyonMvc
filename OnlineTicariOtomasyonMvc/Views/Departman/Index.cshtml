@using OnlineTicariOtomasyonMvc.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>DEPARTMAN ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>

    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.DepartmanID</td>
            <td>@item.DepartmanAd</td>
            <td><a href="/Departman/DeleteDepartman/@item.DepartmanID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/PutDepartman/@item.DepartmanID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Departman/DetailsDepartman/@item.DepartmanID" class="btn" style="background-color:blueviolet;color:white;">Detaylar</a></td>

        </tr>
    }




</table>

<a href="/Departman/CreateDepartman" class="btn btn-info">Departman Ekle</a>